{
    "version": "2",
    "label":"GDPR popup",
    "image":"gdpr/panel_popup.png",
    "js": [
    	"cms/cms_cookie"
    ],
    "item": [
		{
            "type": "textarea",
            "lines":"4",
            "name": "text",
            "label": "Text",
            "default": "Please follow the links below for more\ninformation about this website."
        },
        {
            "type": "text",
            "name": "heading",
            "label": "Heading",
            "default": "Website data policies"
        },
        {
            "type": "text",
            "name": "read_more",
            "label": "Read more label",
            "default": "Read more"
        },
        {
            "type": "text",
            "name": "close",
            "label": "Close label",
            "default": "Accept"
        },
        {
            "type": "text",
            "name": "notracking_label",
            "label": "Notracking label",
            "default": "Continue without tracking"
        },
        {
            "type": "repeater",
            "name": "links",
            "label": "Links",
            "fields": [
                {
                    "type": "text",
                    "name": "text",
                    "label": "Text"
                },
                {
                    "type": "link",
                    "name": "link",
                    "label": "Link"
                }
            ]
        },
        {
        	"type":"subtitle",
        	"label":"Design"
        },
		{
			"type":"select",
			"name":"type",
			"label":"Type",
			"values":{
				"corner":"Corner",
				"blocking":"Blocking"
			},
			"default":"corner"
		}
    ]
}