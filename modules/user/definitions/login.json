{
    "version": "2",
	"label": "Login",
	"image":"user/panel_login.png",
    "item": [
		{
			"type":"text",
			"name":"heading",
			"label":"Heading",
			"default":"user login"
		},
		{
			"type":"text",
			"name":"username_label",
			"label":"Username label",
			"default":"username",
			"help": "Label for username input.||If email is used as username, change accordingly"
		},
		{
			"type":"text",
			"name":"password_label",
			"label":"Password label",
			"default":"password"
		},
		{
			"type":"text",
			"name":"button_label",
			"label":"Button label",
			"default":"log in"
		},
		{
			"type":"link",
			"name":"redirect_link",
			"label":"Success URL",
			"help": "Redirect to this URL after successful login"
		},
		{
			"type":"subtitle",
			"label":"Forgot password"
		},
		{
			"type":"select",
			"label":"Show forgot CTA",
			"name":"show_forgot",
			"values":{
				"yes":"Yes",
				"no":"No"
			},
			"default":"yes"
		},
		{
			"type":"link",
			"name":"forgot_link",
			"label":"Forgot URL"
		},
		{
			"type":"text",
			"name":"forgot_text",
			"label":"Forgot text",
			"default":"forgotten your login details?"
		},
		{
			"type":"text",
			"name":"forgot_cta",
			"label":"Forgot CTA",
			"default":"Click here for reminder"
		},
		{
			"type":"subtitle",
			"label":"Register"
		},
		{
			"type":"select",
			"label":"Show register CTA",
			"name":"show_register",
			"values":{
				"yes":"Yes",
				"no":"No"
			},
			"default":"yes"
		},
		{
			"type":"link",
			"name":"register_link",
			"label":"Register URL"
		},
		{
			"type":"text",
			"name":"register_text",
			"label":"Register text",
			"default":"not registered?"
		},
		{
			"type":"text",
			"name":"register_cta",
			"label":"Register CTA",
			"default":"Click here to register"
		},
		{
			"type":"subtitle",
			"label":"Messages"
		},
		{
			"type":"textarea",
			"name":"message_bad_username",
			"label":"Missing username",
			"lines":"2",
			"default": "No such username"
		},
		{
			"type":"textarea",
			"name":"message_bad_password",
			"label":"Bad password",
			"lines":"2",
			"default": "Bad password for this user"
		},
		{
			"type":"textarea",
			"lines":"2",
			"name":"loggedin_text",
			"label":"Logged in text",
			"default": "You are already logged in"
		},
		{
			"type":"textarea",
			"lines":"2",
			"name":"message_missing_credential",
			"label":"Empty username or password",
			"default": "Empty username or password submitted"
		}
	]
}
	
