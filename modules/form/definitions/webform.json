[
	{
		"type":"textarea",
		"name":"autoreply_text",
		"label":"Reply text",
		"lines":"10",
		"default":"Dear [name]\r\n\r\nThank you for you interest! Someone will be in contact shortly.\r\n\r\nThis is automated message generated by the website.\r\n\r\n\r\n\r\n"
	},
	{
		"type":"text",
		"name":"submit_text",
		"label":"Submit text",
		"default":"SUBMIT"
	},
	{
		"type":"text",
		"name":"success_message",
		"label":"Success message",
		"default":"Thank you! You will be contacted shortly."
	},
	{
		"type":"text",
		"name":"sending_message",
		"label":"Sending message",
		"default":"Sending ..."
	},
	{
		"type":"select",
		"name":"autoreply",
		"label":"Auto reply to person",
		"values":{
			"0":"No confirmation",
			"1":"Yes, automatic confirmation"
		},
		"default":"0"
	},
	{
		"type":"text",
		"name":"autoreply_subject",
		"label":"Reply subject",
		"default":"Automated email"
	},
	{
		"type":"text",
		"name":"autoreply_email",
		"label":"Reply from email",
		"default":"noreply@bytecrackers.com"
	},
	{
		"type":"text",
		"name":"autoreply_name",
		"label":"Reply name",
		"default":"Automatic reply"
	},
	{
		"type":"repeater",
		"name":"emails",
		"label":"People receiving messages",
		"fields":[
			{
				"type":"text",
				"name":"email",
				"label":"Email"
			}
		]
	},
	{
		"type":"repeater",
		"name":"elements",
		"label":"Fields",
		"fields":[
			{
				"type":"text",
				"name":"label",
				"label":"Label"
			},
			{
				"type":"text",
				"name":"name",
				"label":"Name"
			},
			{
				"type":"select",
				"name":"type",
				"label":"Type",
				"values":{
					"text":"Text",
					"textarea":"Textarea",
					"select":"Select"
				},
				"default":"no"
			},
			{
				"type":"select",
				"name":"mandatory",
				"label":"Mandatory",
				"values":{
					"0":"No",
					"1":"Yes"
				},
				"default":"0"
			},
			{
				"type":"text",
				"name":"limit",
				"label":"Char limit"
			}
		]
	},
	{
		"type":"repeater",
		"name":"values",
		"label":"Select values",
		"fields":[
			{
				"type":"repeater_select",
				"target":"elements",
				"field":"name",
				"name":"element",
				"label":"Field",
				"add_empty":"0"
			},
			{
				"type":"text",
				"name":"label",
				"label":"Label"
			},
			{
				"type":"text",
				"name":"value",
				"label":"Value"
			}
		]
	}
]