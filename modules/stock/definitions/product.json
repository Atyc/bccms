{
	"version":"2",
	"list":{
		"list_title":"Products",
		"item_title":"Product",
		"title_field":"heading",
		"filter_fields":{
			"show":"-- show --",
			"product_category_id":"-- product category --",
			"status":"-- status --"
		},
		"link_target":"1"
	},
	"item":[ 
		{
			"type":"textarea",
			"name":"heading",
			"label":"Heading",
			"lines":"2",
			"translate":"1"
		},
		{
			"type":"image",
			"name":"image",
			"label":"Image",
			"category":"product",
			"help":"Main image used for the product mainly on listings"
		},
		{
			"type":"select",
			"name":"status",
			"label":"Product status",
			"values":{
				"available":"Available",
				"archive":"Archive",
				"bespoke":"Bespoke"
			},
			"default":"available"
		},
		{
			"type":"fk",
			"list":"stock/category",
			"name":"category_id",
			"label":"Category",
			"add_empty":"1"
		},
		{
			"type":"fk",
			"list":"stock/subcategory",
			"name":"subcategory_id",
			"label":"Subcategory",
			"add_empty":"1"
		},
		{
			"type":"fk",
			"list":"stock/product_stock",
			"name":"product_stock_id",
			"label":"Stock group",
			"add_empty":"1",
			"help":"Needed for delivery options"
		},
		{
			"type":"text",
			"name":"price",
			"label":"Default price"
		},
		{
			"type":"textarea",
			"name":"text",
			"label":"Description",
			"lines":"12",
			"translate":"1",
			"html":"PB"
		},
		{
			"type":"textarea",
			"name":"specification",
			"label":"Specification text",
			"lines":"6",
			"translate":"1",
			"help":"Any extra information"
		},
		{
			"type":"grid",
			"name":"product_items",
			"label":"Product items",
			"ds":"product_items",
			"operations":"CLS",
			"fields":[
				{
					"type":"id",
					"name":"id",
					"label":"ID",
					"width":"5",
					"order":"10"
				},
				{
					"type":"cms/cms_grid_editable",
					"name":"sku",
					"label":"SKU",
					"width":"15",
					"align":"left",
					"order":"40"
				},
				{
					"type":"text",
					"name":"price",
					"label":"Price",
					"width":"10",
					"order":"50"
				},
				{
					"type":"text",
					"name":"status",
					"label":"Status",
					"width":"10",
					"order":"60"
				}
			]
		},
		{
			"type":"repeater",
			"name":"details",
			"label":"Details",
			"fields":[
				{
					"type":"text",
					"name":"label",
					"label":"Label",
					"mandatory":"1",
					"translate":"1"
				},
				{
					"type":"text",
					"name":"value",
					"label":"Value",
					"mandatory":"1",
					"translate":"1"
				}
			]
		},
		{
			"type":"repeater",
			"name":"related",
			"label":"Related",
			"help":"Related products, maximum three from here is shown randomly. If not enough here, shows random other products.",
			"fields":[
				{
					"type":"fk",
					"name":"product_id",
					"label":"Product",
					"list":"cg/product"
				}
			]
		},
		{
			"type":"repeater",
			"name":"images",
			"label":"Images",
			"fields":[
				{
					"type":"image",
					"name":"image",
					"label":"Image",
					"category":"product",
					"help":"General images used for the product"
				},
				{
					"type":"text",
					"name":"text",
					"label":"Label",
					"translate":"1"
				},
				{
					"type":"select",
					"name":"style",
					"label":"Style",
					"values": {
						"full":"Full",
						"frame":"Frame",
						"small":"Small",
						"hide":"Hide"
					},
					"default":"full"
				}
			]
		},
		{
			"type":"subtitle",
			"label":"Design"
		},
		{
			"type":"colour",
			"name":"colour",
			"label":"Accent colour",
			"default":"black",
			"help":"Used on product page design"
		}
	],
	"settings":[
		{
			"type":"panel",
			"name":"display_panel",
			"label":"Panel",
			"add_empty":"1",
			"help":"Panel to show product in"
		},
		{
			"type":"repeater",
			"name":"categories",
			"label":"Category defaults",
			"fields":[
				{
					"type":"select",
					"name":"category",
					"label":"Product category",
					"values":{
						"archive":"Archive",
						"bespoke":"Bespoke",
						"limited":"Limited"
					},
					"default":"archive"
				},
				{
					"type":"text",
					"name":"buy_label",
					"label":"Order default label"
				},
				{
					"type":"link",
					"name":"buy_link",
					"label":"Order default link"
				}
			]
		},
		{
			"type":"select",
			"name":"show_like",
			"label":"Show product like",
			"values":{
				"0":"No",
				"1":"Yes"
			},
			"default":"0",
			"help":"If Yes, show like button and liked products link"
		}
	]
}